<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    
    <%= stylesheet_link_tag "flashblock.css" %>
    <%= stylesheet_link_tag "360player" %>
    <%= stylesheet_link_tag "360player-visualization" %> 
    
    <%= javascript_include_tag "application" %>
    <!--[if IE]><%= javascript_include_tag "excanvas" %><![endif]-->
    <%= javascript_include_tag "berniecode-animator" %>
    <%= javascript_include_tag "soundmanager2" %>
    <%= javascript_include_tag "360player" %>
    

    <%= csrf_meta_tags %> 
     <%# render 'layouts/html5shiv' %>  
     <%# render 'layouts/shim' %>  
     </head>
  <body>
    <%= render 'layouts/header' %>
    <div class="container">
     <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "alert alert-#{key}") %>
      <% end %>
      <%= yield %>
      <%= render 'layouts/footer' %>
     
     <%= debug(params) if Rails.env.development? %>  
    </div>
  </body>
</html>