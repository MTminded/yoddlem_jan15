<%= form_for([@user, @message]) do |f| %>

  <div class="field">
    <%= f.label :subject %><br />
    <%= f.text_field :subject, placeholder: "Subject..." %>
  </div>
  <div class="field">
    <%= "To: #{@receiver.name}" %>
    <%= f.text_field :receiver_id %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body, placeholder: "Write Your Message here..." %>
  </div>

  <div class="actions">
    <%= f.submit "Send Message" %>
  </div>
<% end %>
